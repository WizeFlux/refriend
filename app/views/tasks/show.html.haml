%div{'ng-controller' => 'People'}
  %section
    %h1= @task.title

    %menu  
      = link_to 'New reference', new_task_reference_path(@task)
      = link_to 'Back to index of tasks', root_path
      - if @task.requester_uid == current_person_uid
        = link_to 'Edit', edit_task_path(@task)
        = form_for @task, method: :delete do |form|
          = form.submit 'Delete'
    
    
    %p
      %img{src: "{{person(#{@task.requester_uid}).photo}}"}
      {{person(#{@task.requester_uid}).first_name}}
      {{person(#{@task.requester_uid}).nickname}}
      {{person(#{@task.requester_uid}).last_name}}
      
    
    %p= @task.description
    %p Views #{@task.views_count}, References #{@task.references.count}, Created at #{@task.created_at}
    %p
      - @task.tags.each do |tag|
        %i= tag

    %hr

  %section
    - @task.references.each do |reference|
      = render 'references/reference', reference: reference